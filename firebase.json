{
  "hosting": {
    "site": "install4",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/home_v2.html"
      }
    ],

    "headers": [
      { "source":"/service-worker.js", "headers": [{"key": "Cache-Control", "value": "no-cache"}] }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
